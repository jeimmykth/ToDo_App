<p id="notice"><%= notice %></p>

<header>
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <div class="clearfix">
          <div class="pull-left">
            <h1 class="header-title">Tasks</h1>
          </div> 
          <div class="pull-right">
            <%= link_to "New Task", new_to_do_list_task_path , class: "btn btn-success" %>
          </div>  
        </div>
      </div>  
    </div>  
  </div> 
</header>

  <div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <div class="panel panel-default">
          <div class="list-group">
            <% @tasks.each do |task| %>
              <li class="list-group-item">
              <h4 class="list-group-item-heading"><%= task.description %></h4>
              <p class="list-group-item-text"><%= task.is_completed %></p>
              <div class="buttons">   
                <%= link_to "", edit_to_do_list_task_path(id: task.id, to_do_list_id: @to_do_list.id), class:"btn btn-defaul btn-xs glyphicon glyphicon-edit", title:"edit" %>
                <%= link_to "", to_do_list_task_path(id: task.id, to_do_list_id: @to_do_list.id), method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-danger btn-xs glyphicon glyphicon-remove", title:"Destroy" %>              
              </div>
              </li>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <br>

